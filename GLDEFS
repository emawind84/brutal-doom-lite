//NO LIGHTS
pointlight NOLIGHT
{
	color 0.0 0.0 0.0
	size 1
	offset 0 0 0
	dontlightself 1
}

//Rain doesn't have light
object ShortGreenTorchVanilla 
{
    frame SMGT { light NOLIGHT }
}
object GreenTorchVanilla
{
    frame TGRN { light NOLIGHT }
}




